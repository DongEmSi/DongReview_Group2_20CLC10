<div class="container">
    <h2>LIST OF UPLOADED FILMS</h2>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Uploaded at</th>
            <th scope="col" colspan="3">Updated at</th>
            </tr>
        </thead>
        <tbody>
            {{#each films}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.title}}</td>
            <td>{{this.createdAt}}</td>
            <td>{{this.updatedAt}}</td>
            <td><a href="/films/{{this._id}}/update" class="btn btn-dark">Sửa</a></td>
            <td><a href="" class="btn btn-dark" data-toggle="modal" data-target="#deleteFilmModal">Xóa</a></td>  
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="deleteFilmModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa phim ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa phim này chứ!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger">Xóa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
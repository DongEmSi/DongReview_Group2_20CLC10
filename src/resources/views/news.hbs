<div class="container"> 
    <div class="mt-4">
        <div class="row">

            {{#each news}}

            <div class="col-sm-6 col-lg-3" style="margin-top: 16px; margin-right: 16px;">
                <div class="card" style="width: 18rem;">
                <a href="/news/{{this.slug}}">
                    <img class="card-img-top" style="height: 18rem;" src="{{this.image}}" alt="{{this.title}}">
                </a>
                <div class="card-body">
                    <a href="/news/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text">{{this.content}}</p>
                    <a href="#" class="btn btn-primary">Đọc tin tức</a>
                </div>
                </div>
            </div>
            
            {{/each}}
        </div>
    </div>
</div>

